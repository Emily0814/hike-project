<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- Doctype가 mapper로 시작하기 때문에 아래 태그도 mapper로 시작한다. -->
<!-- mapper 파일의 역할? : SQL query 작성 -->
<!-- mapper(java)파일의 경로와 함께 namespace에 파일명을 적는 것이 개발계의 관습. -->
<mapper namespace="com.test.hike.mapper.ClubMapper">
	<select id="clubList" resultType="ClubDTO">
		select * from club order by club_id desc
	</select>

	<select id="clubView" parameterType="String" resultType="ClubDTO">
		select * from club where club_id = #{club_id}
	</select>

</mapper>