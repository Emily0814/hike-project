<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<!-- 그 외 페이지 -->
	<definition name="club.*" template="/WEB-INF/views/layout/index.jsp">
		<put-attribute name="main-menu" value="/WEB-INF/views/inc/main-menu.jsp"/>
		<put-attribute name="asset" value="/WEB-INF/views/club/asset.jsp"/>
		<put-attribute name="content"
					   value="/WEB-INF/views/club/{1}.jsp"/>
		<put-attribute name="main-footer" value="/WEB-INF/views/inc/main-footer.jsp"/>
	</definition>

	<definition name="community.*" template="/WEB-INF/views/layout/submenu-layout.jsp">
		<put-attribute name="main-menu" value="/WEB-INF/views/inc/main-menu.jsp"/>
		<put-attribute name="sub-menu" value="/WEB-INF/views/inc/community-menu.jsp"/>
		<put-attribute name="asset" value="/WEB-INF/views/community/asset.jsp"/>
		<put-attribute name="content"
					   value="/WEB-INF/views/community/{1}.jsp"/>
		<put-attribute name="main-footer" value="/WEB-INF/views/inc/main-footer.jsp"/>
	</definition>

	<definition name="course.index" template="/WEB-INF/views/layout/index.jsp">
		<put-attribute name="main-menu" value="/WEB-INF/views/inc/main-menu.jsp"/>
		<put-attribute name="asset" value="/WEB-INF/views/course/asset.jsp"/>
		<put-attribute name="content"
					   value="/WEB-INF/views/course/index.jsp"/>
		<put-attribute name="main-footer" value="/WEB-INF/views/inc/main-footer.jsp"/>
	</definition>

	<definition name="mypage.index" template="/WEB-INF/views/layout/index.jsp">
		<put-attribute name="main-menu" value="/WEB-INF/views/inc/main-menu.jsp"/>
		<put-attribute name="asset" value="/WEB-INF/views/mypage/asset.jsp"/>
		<put-attribute name="content"
					   value="/WEB-INF/views/mypage/index.jsp"/>
		<put-attribute name="main-footer" value="/WEB-INF/views/inc/main-footer.jsp"/>
	</definition>

	<!-- 홈페이지 -->
	<definition name="*" template="/WEB-INF/views/layout/index.jsp">
		<put-attribute name="main-menu" value="/WEB-INF/views/inc/main-menu.jsp"/>
		<put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp"/>
		<put-attribute name="content"
					   value="/WEB-INF/views/{1}.jsp"/>
		<put-attribute name="main-footer" value="/WEB-INF/views/inc/main-footer.jsp"/>
	</definition>

</tiles-definitions>












